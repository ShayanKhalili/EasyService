<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout">
    <TextView
        android:id="@+id/menu_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="Cheeseburger"
        android:textSize="17sp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/menu_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$8.00"
        android:layout_toRightOf="@id/menu_item_name"
        android:layout_toEndOf="@id/menu_item_name"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/menu_item_picker"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_toLeftOf="@id/menu_item_delete"
        android:layout_toStartOf="@id/menu_item_delete"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        app:np_width="64dp"
        app:np_height="180dp"
        app:np_dividerColor="@color/colorPrimary"
        app:np_dividerDistance="30dp"
        app:np_formatter="%02d"
        app:np_max="59"
        app:np_min="0"
        app:np_selectedTextColor="@color/colorPrimary"
        app:np_selectedTextSize="15sp"
        app:np_textColor="@color/colorPrimary"
        app:np_textSize="15sp"
        app:np_typeface="sans-serif-light"
        app:np_value="3"/>
    
    <Button
        android:id="@+id/menu_item_delete"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:text="X"/>
</RelativeLayout>